{
  "private": true,
  "name": "remix-form-wizard-demo",
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "postinstall": "remix setup",
    "build": "yarn build:css && remix build",
    "build:css": "yarn generate:css --minify",
    "dev": "concurrently \"yarn dev:css\" \"node -r dotenv/config node_modules/.bin/remix dev\"",
    "dev:css": "yarn generate:css --watch",
    "generate:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind.css",
    "format": "prettier --write .",
    "lint": "eslint --cache-location ./node_modules/.cache/eslint .",
    "start": "cross-env NODE_ENV=production remix-serve build",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@remix-run/react": "^1.3.1",
    "@remix-run/serve": "^1.3.1",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.3.1",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.3.1",
    "@remix-run/eslint-config": "^1.3.1",
    "@tailwindcss/forms": "^0.5.0",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "concurrently": "^7.0.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.6.0",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=14"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true
  },
  "eslintIgnore": [
    "/.cache",
    "/build",
    "/node_modules",
    "/public/build"
  ]
}
