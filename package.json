{
  "private": true,
  "name": "remix-form-wizard-demo",
  "description": "",
  "license": "",
  "scripts": {
    "postinstall": "remix setup",
    "dev": "concurrently \"npm run dev:css\" \"node -r dotenv/config node_modules/.bin/remix dev\"",
    "start": "cross-env NODE_ENV=production remix-serve build",
    "build": "cross-env NODE_ENV=production npm run build:css && remix build",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind.css --minify",
    "dev:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind.css --watch",
    "format": "prettier --ignore-path .gitignore --write '**/*.{js,ts,tsx,css,json,md,html}'",
    "lint": "eslint --ext .tsx,.ts,.js,.jsx ."
  },
  "dependencies": {
    "@remix-run/react": "^1.2.3",
    "@remix-run/serve": "^1.2.3",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@tailwindcss/forms": "^0.5.0",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "concurrently": "^7.0.0",
    "eslint": "^8.10.0",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true
  }
}
